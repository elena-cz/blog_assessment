    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= current_user.first_name %>'s Blog
                    <small>@<%= current_user.username %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->
        
    
        <!-- Post One -->
        <% @posts.each do |post| %>
        
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="<%= post.avatar.url %>" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
                <a class="btn btn-primary" href="<%= user_post_path(post.user_id, post.id) %>">View Post <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>
        <% end %>

        

        <hr>

        <!-- Pagination -->
        <div class="text-center">
            <%= will_paginate @posts %>
        </div>
        <!-- /.row -->

        <hr>

      <%= render "partials/footer" %>
    </div>
    <!-- /.container -->
